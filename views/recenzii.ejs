	$("button").text("Terminat");
	$("button").attr("href", "/index");
	
	$(".modal-content").animate({
      height: '-=150px',
      width: '-=150px'
    });
	$(".modal-content").animate({
      height: '+=150px',
      width: '+=150px'
    });
});
